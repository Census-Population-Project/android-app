<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/choosing_census"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:layout_marginBottom="16dp" />

                    <com.google.android.material.card.MaterialCardView
                            android:id="@+id/selectedCensusCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorControlNormal"
                            android:visibility="gone">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                            <TextView
                                    android:id="@+id/selectedCensusName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?attr/textAppearanceBody1"
                                    android:textStyle="bold" />

                            <TextView
                                    android:id="@+id/selectedCensusYear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?attr/textAppearanceBody2"
                                    android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/selectCensusButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_census"
                            android:contentDescription="@string/choose_census"
                            app:icon="@drawable/ic_calendar"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginBottom="16dp" />

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider"
                            android:layout_marginBottom="16dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/region"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold" />

                    <Spinner
                            android:id="@+id/regionSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:minHeight="48dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/city"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold" />

                    <Spinner
                            android:id="@+id/citySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/generalInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/generalInfoHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/general_information"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        <ImageView
                                android:id="@+id/generalInfoExpandIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/general_information"
                                android:src="@drawable/ic_expand_more"
                                app:tint="?attr/colorControlNormal" />

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/generalInfoContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                        <TextView
                                android:id="@+id/totalPopulationTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:layout_marginBottom="16dp"
                                android:lineSpacingExtra="4dp" />

                        <TextView
                                android:id="@+id/householdsTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/demographicsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/demographicsHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/demographic_data"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        <ImageView
                                android:id="@+id/demographicsExpandIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/demographic_data"
                                android:src="@drawable/ic_expand_more"
                                app:tint="?attr/colorControlNormal" />

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/demographicsContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                        <TextView
                                android:id="@+id/genderDistributionTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:layout_marginBottom="16dp"
                                android:lineSpacingExtra="4dp" />

                        <TextView
                                android:id="@+id/ageDistributionTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/educationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/educationHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/education_and_languages"
                                android:textAppearance="?attr/textAppearanceHeadline6" />

                        <ImageView
                                android:id="@+id/educationExpandIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/education_and_languages"
                                android:src="@drawable/ic_expand_more"
                                app:tint="?attr/colorControlNormal" />

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/educationContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                        <TextView
                                android:id="@+id/educationDistributionTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:layout_marginBottom="16dp"
                                android:lineSpacingExtra="4dp" />

                        <TextView
                                android:id="@+id/languagesTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:drawablePadding="8dp"
                                android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 